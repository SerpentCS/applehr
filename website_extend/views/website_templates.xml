<odoo>
    <template id="contactus_button" inherit_id="website.contactus">
        <xpath expr="//div[@class='mb-0 py-2 col-12 s_website_form_submit'][1]" position="replace">
            <div style=" padding-left:28%" class="col-12">
                <span style="text-align:start" class="text-danger" id="error-message" type="hidden">
                </span>
            </div>

            <div style=" padding-left:28%" class="col-12">
                <span id="s_website_form_result" />
            </div>
            <div class="mb-0 py-2 col-6 s_website_form_submit" data-name="Submit Button">
                <div style="width: 200px;" class="s_website_form_label" />
                <a href="#" role="button" class="btn btn-primary btn-lg s_website_form_send">Submit</a>
            </div>
            <t t-if="website and website.appointment_type_id">
                <div class="col-6 col-sm-6 col-md-6 col-lg-6">
                    <div style="text-align:end;" class="mb-0 py-2">
                        <button type="button" id="custom_redirect_button" class="btn btn-primary btn-lg" t-att-data-appointment_type_id="website.appointment_type_id.id" onclick="validateForm()">Book Slot</button>
                    </div>
                </div>
            </t>
        </xpath>
        <xpath expr="//form[@id='contactus_form']" position="attributes">
            <attribute name="data-model_name">crm.lead</attribute>
        </xpath>
    </template>
    <template id="portal_my_home_Balance" name="Show Balance" inherit_id="portal.portal_my_home" customize_show="True" priority="40">>
        <xpath expr="//div[hasclass('o_portal_docs')]" position="inside">
            <t t-call="portal.portal_docs_entry">
                <t t-set="title">Balance</t>
                <t t-set="url" t-value="'/my/quotes'" />
                <t t-set="placeholder_count" t-value="'balance_count'" />
            </t>
        </xpath>
    </template>
    <template id="training_videos" name="Training Videos" inherit_id="website_slides.courses_all">
        <xpath expr="//div[@class='oe_structure oe_empty'][3]/section[@class='s_banner'][1]/div[@class='container py-5'][1]" position="attributes">
            <attribute name="t-att-class">'col-lg-12 pe-lg-12 order-lg-1'</attribute>

            <h1 class="display-3 mb-0 text-white">All Training Videos</h1>
        </xpath>
    </template>
    <template id="training_videos_home" name="Training Videos" inherit_id="website_slides.course_main">
        <xpath expr="//a[@id='home-tab'][1]" position="replace">
            <a t-att-class="'nav-link %s' % ('active' if active_tab == 'home' else '')" id="home-tab" data-bs-toggle="pill" href="#home" role="tab" aria-controls="home" t-att-aria-selected="'true' if active_tab == 'home' else 'false'">
                <i class="fa fa-home"/>
 Training Videos
            </a>
        </xpath>
    </template>
    <template id="training_videos_search" name="Training Videos" inherit_id="website_slides.course_nav">
        <xpath expr="//li[@class='breadcrumb-item'][1]" position="replace">
            <li class="breadcrumb-item">
                <a href="/slides">Training Videos</a>
            </li>
        </xpath>
        <xpath expr="//t[8]" position="replace">
            <t t-set="placeholder">Search Training Videos</t>
        </xpath>
    </template>
    <template id="training_videos_sidebar" name="Side Bar" inherit_id="website_slides.course_sidebar">
        <xpath expr="//div[@class='o_wslides_course_sidebar bg-white px-3 py-2 py-md-3 mb-3 mb-md-5'][1]" position="attributes">
            <attribute name="style">display:none;</attribute>
        </xpath>
    </template>
    <template id="training_title" name="Training Videos" inherit_id="website_slides.courses_home">
        <xpath expr="//div[@class='text-white'][1]" position="replace">
            <div class="text-white">
                <h1 class="display-3 mb-0">Reach new heights</h1>
                <h2 class="mb-4">Start your online training today!</h2>
                <div class="row mt-1 mb-3">
                    <div class="col">
                        <p>Skill up and have an impact! Your business career starts here.<br/>
Time to start your training.</p>
                    </div>
                </div>
            </div>
        </xpath>
        <xpath expr="//section[@class='s_banner overflow-hidden'][1]" position="replace">
            <section class="s_banner overflow-hidden" style="background-color:(0, 0, 0, 0); background-image: url(&quot;/website_extend/static/src/img/banner_default.png&quot;); background-size: cover; background-position: 55% 65%" data-snippet="s_banner">
                <div class="container align-items-center d-flex mb-5 mt-lg-5 pt-lg-4 pb-lg-1">
                    <div class="text-white">
                        <h1 class="display-3 mb-0" style="color: black;">Reach new heights</h1>
                        <h2 class="mb-4" style="color: cadetblue;">Start your online course today!</h2>
                        <div class="row mt-1 mb-3">
                            <div class="col" style="color: black;">
                                <p>Skill up and have an impact! Your business career starts here.<br/>
Time to start a course.</p>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </xpath>

        <xpath expr="//div[@class='col-lg-3 order-lg-2'][1]" position="attributes">
            <attribute name="style">display:none;</attribute>
        </xpath>

        <xpath expr=" //div[@class='row'][1]/div[2]" position="attributes">
            <attribute name="t-att-class">'col-lg-12 pe-lg-12 order-lg-1'</attribute>
        </xpath>
        <xpath expr="//t[6]" position="replace">
            <t t-set="placeholder">Search Training Videos</t>

        </xpath>
        <xpath expr="//div[@class='o_wslides_home_content_section mb-3'][1]/div[@class='row o_wslides_home_content_section_title align-items-center'][1]/div[@class='col'][1]/h5[@class='m-0'][1]" position="replace">
            <h5 class="m-0">My Training videos</h5>
        </xpath>
        <xpath expr="//div[@class='o_wslides_home_content_section mb-3'][2]/div[@class='row o_wslides_home_content_section_title align-items-center'][1]/div[@class='col'][1]/h5[@class='m-0'][1]" position="replace">
            <h5 class="m-0">Most popular Training videos</h5>
        </xpath>
        <xpath expr="//div[@class='o_wslides_home_content_section mb-3'][3]/div[@class='row o_wslides_home_content_section_title align-items-center'][1]/div[@class='col'][1]/h5[@class='m-0'][1]" position="replace">
            <h5 class="m-0">Newest Training videos</h5>
        </xpath>
        <xpath expr="//div[@class='o_wslides_home_content_section mb-3'][@t-if='channels_popular']" position="attributes">
            <attribute name="style">display:none;</attribute>
        </xpath>
        <xpath expr="//div[@class='o_wslides_home_content_section mb-3'][@t-if='channels_newest']" position="attributes">
            <attribute name="style">display:none;</attribute>
        </xpath>
        <xpath expr="//a[@class='nav-link nav-link me-md-2 o_wslides_home_all_slides'][1]" position="replace">
            <a class="nav-link nav-link me-md-2 o_wslides_home_all_slides" href="/slides/all">
                <i class="fa fa-graduation-cap me-1"/>
All Training Videos</a>
        </xpath>
    </template>


    <template id="slide_fullscreen_sidebar_category" inherit_id="website_slides.slide_fullscreen_sidebar_category">
        <xpath expr="//t[@t-if='can_access_channel']" position="replace">
            <t t-if="can_access_channel">
                <t t-set="links" t-value="slide.slide_resource_ids.filtered(lambda res: res.resource_type == 'url')"/>
                <li t-foreach="links" t-as="link" class="ps-0 mb-1">
                    <a t-if="can_access" class="o_wslides_fs_slide_link"
                       t-att-data-additional_url="link._get_link_resources_url(link.link)" 
                       href="#">
                        <i class="fa fa-link me-2"/>
                        <span t-esc="link.name"/>
                    </a>
                </li>
                <div class="o_wslides_js_course_join ps-0" t-if="slide._has_additional_resources('file')">
                    <t t-set="resources" t-value="slide.slide_resource_ids.filtered(lambda res: res.resource_type == 'file')"/>
                    <li t-foreach="resources" t-as="resource" class="mb-1">
                        <a class="o_wslides_fs_slide_link" t-att-data-additional_url="resource._get_file_resources_url()" 
                        t-att-href="resource._get_download_url()">
                            <i class="fa fa-download me-2"/>
                            <span t-esc="resource.name"/>
                        </a>
                    </li>
                </div>
            </t>
        </xpath>
    </template>


    <template id="slide_fullscreen_resources" inherit_id="website_slides.slide_fullscreen">
        <xpath expr="//a[@class='d-flex align-items-center px-3 o_wslides_fs_exit_fullscreen']" position="replace">
            <a class="d-none d-flex align-items-center px-3 o_wslides_fs_exit_fullscreen" t-attf-href="/slides/slide/#{slug(slide)}">
                <i class="fa fa-sign-out"/>
                <span class="d-none d-md-inline-block ms-1">Exit Fullscreen</span>
            </a>
        </xpath>
    </template>

</odoo>

