<odoo>
    <template id="contactus_button" inherit_id="website.contactus">
        <xpath expr="//div[@class='mb-0 py-2 col-12 s_website_form_submit'][1]" position="inside">
            <t t-if="website and website.appointment_type_id">
                <button type="button" 
                        id ='custom_redirect_button' 
                        class="btn btn-primary btn-lg "
                        t-att-data-appointment_type_id="website.appointment_type_id.id">
                    Book Slot
                </button>
            </t>
        </xpath>
        <xpath expr="//form[@id='contactus_form']" position="attributes">
            <attribute name="data-model_name">crm.lead</attribute>
        </xpath>
    </template>
    
    <template id="portal_my_home_Balance2" name="Show Balance"
              inherit_id="portal.portal_my_home"
              customize_show="True" 
              priority="40">>
        <xpath expr="//div[hasclass('o_portal_docs')]" position="inside">
            <t t-call="portal.portal_docs_entry">
                <t t-set="title">Balance</t>
                <t t-set="url" t-value="'/my/quotes'"/>
                <t t-set="placeholder_count" t-value="'balance_count'"/>
            </t>
        </xpath>
    </template>
</odoo>
