<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="sale_order_view_form" model="ir.ui.view">
            <field name="name">sale.order.view.form.inherit.confirm.sale</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='state']" position="attributes">
                    <attribute name="statusbar_visible">draft,sent,sale,confirm</attribute>
                </xpath>
                <xpath expr="//button[@name='action_cancel']" position="after">
                    <button name="action_completed" type="object" string="Completed" attrs="{'invisible': ['|', ('state', 'not in', ['sale']), ('id', '=', False)]}" data-hotkey="z"/>
                </xpath>
                <xpath expr="//field[@name='order_line']" position="attributes">
                    <attribute name="attrs">{'readonly': [('state', 'in', ('done','cancel','confirm'))]}</attribute>
                </xpath>
            </field>
        </record>
    </data>
</odoo>