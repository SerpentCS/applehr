<templates id="template" xml:space="preserve">

    <t t-name="website.slides.fullscreen.content">
        <iframe id="additional_resources_iframe"
                class="d-none"
                src="" 
                background-color="4283586137"
                style="width: 100%;"/>
        <div class="parent_slide h-100 w-100">
            <t t-if="widget.get('slide').category === 'document'">
                <div class="ratio h-100">
                    <iframe t-att-src="widget.get('slide').embedUrl" 
                            class="o_wslides_iframe_viewer" 
                            allowFullScreen="true" 
                            frameborder="0"/>
                </div>
            </t>
            <t t-if="widget.get('slide').category === 'infographic'">
                <div class="o_wslides_fs_player w-100 h-100 overflow-auto d-flex align-items-start justify-content-center">
                    <img t-att-src="'/web/image/slide.slide/'+ widget.get('slide').id +'/image_1024'" 
                         class="img-fluid position-relative m-auto" alt="Slide image"/>
                </div>
            </t>
        </div>
    </t>

</templates>
