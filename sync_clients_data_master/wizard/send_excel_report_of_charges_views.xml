<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="send_excel_report_employee_charges_views_form" model="ir.ui.view">
        <field name="name">send.excel.report.employee.charges.form</field>
        <field name="model">send.excel.report.employee.charges</field>
        <field name="arch" type="xml">
            <form string="Send Email Employee Charges Excel Report">
                <sheet>
                    <group>
                        <group>
                            <field name="start_date" required="1"/>
                        </group>
                        <group>
                            <field name="end_date" required="1"/>
                        </group>
                    </group>
                </sheet>
                <footer>
                    <button string="Send Email" type="object" name="action_send_email"/>
                    <button string="Close" class="btn btn-secondary" special="cancel" data-hotkey="z"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
