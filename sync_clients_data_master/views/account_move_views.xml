<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="view_move_form_inherit_sync_clients_data" model="ir.ui.view">
        <field name="name">account.move.form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='invoice_date']" position="after">
                <field name="payment_mode" required="1"/>
                <field name="bank_name" attrs="{'invisible': [('payment_mode', '!=', 'chequa')],'required': [('payment_mode', '=', 'chequa')]}"/>
                <field name="chequa_no" attrs="{'invisible': [('payment_mode', '!=', 'chequa')],'required': [('payment_mode', '=', 'chequa')]}"/>
                <field name="issue_date" attrs="{'invisible': [('payment_mode', '!=', 'chequa')],'required': [('payment_mode', '=', 'chequa')]}"/>
                <field name="online_id" attrs="{'invisible': [('payment_mode', '!=', 'online')],'required': [('payment_mode', '=', 'online')]}"/>
                <field name="transection_id" attrs="{'invisible': [('payment_mode', '!=', 'online')],'required': [('payment_mode', '=', 'online')]}"/>
            </xpath>
        </field>
    </record>

</odoo>
