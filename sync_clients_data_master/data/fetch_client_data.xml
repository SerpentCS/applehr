<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="ir_cron_fetch_employee_daily_data" model="ir.cron">
        <field name="name">Fetch Employee Daily Data</field>
        <field name="model_id" ref="sync_clients_data_master.model_remote_server" />
        <field name="state">code</field>
        <field name="code">model._fetch_employee_daily_data()</field>
        <field name="interval_number">1</field>
        <field name="nextcall" eval="(DateTime.now() - timedelta()).strftime('%Y-%m-%d 19:00:00')"/>
        <field name="interval_type">days</field>
        <field name="priority">1</field>
        <field name="numbercall">-1</field>
        <field name="doall" eval="False" />
    </record>

